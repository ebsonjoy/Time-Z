<script>
  // Countdown timer for OTP resend
  var timer = 10; // seconds
  var interval = setInterval(function() {
    $('#timer').text('Resend OTP in ' + timer + ' seconds');
    timer--;
    if (timer === 0) {
      clearInterval(interval);
      $('#timer').html('<a href="/resendOpt" id="resendLink">Resend OTP</a>');
    }
  }, 1000);
</script>
